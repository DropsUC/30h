<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact - BDE Paris Ynov Campus</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/">Accueil</a></li>
          <li><a href="/events">Événements</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/boutique">Boutique</a></li>
          <li><a href="/le-bde">Club</a></li>
          <li><a href="/association">Association</a></li>
          <li><a href="/annonce">Annonce</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <h2>Nos Membres</h2>
      <section class="team">
        <% members.forEach(member => { %>
        <div class="team-member">
          <img
            src="/<%= member.photo %>"
            alt="Photo de <%= member.name %>"
            class="team-member-photo"
          />
          <h3><%= member.name %></h3>
          <p><strong>Email :</strong> <%= member.email || '@mail' %></p>
          <p>
            <strong>Passion :</strong> <%= member.passion || 'Non renseignée' %>
          </p>
          <p><strong>Numéro :</strong> <%= member.phone || '06XXXXXXXX' %></p>
        </div>
        <% }) %>
      </section>
    </main>
  </body>
</html>
